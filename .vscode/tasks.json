{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build service",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "-o",
                "geometry-server",
                "${workspaceFolder}/cmd/remote-geometry-server"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
        {
            "label": "Swagger generation",
            "type": "shell",
            "command": "swagger",
            "args": [
                "generate",
                "server",
                "-f",
                "${workspaceFolder}/apis/swagger.yml",
                "-a",
                "geometry-server"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}